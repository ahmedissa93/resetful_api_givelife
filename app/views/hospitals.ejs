<%- include('./layouts/header.ejs') %>
<%- include('./layouts/menu.ejs') %>

<div class="card mt-5" style="width: 100%;">
  <div class="col md-3">
    <a href="/hospital/add" class="btn btn-primary mb-4 mt-3">add hospital</a>

  </div>
  <% if (messages.success) { %>
      <div class="alert alert-success" role="alert"><%- messages.success %></div>
  <% } %>
  <div class="card-header">
المستشفيات
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">الاسم</th>
        <th scope="col"> اسم المستخدم </th>
        <th scope="col">الرقم</th>
        <th scope="col"> الايميل</th>
        <th scope="col"> الاجراءات</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i = 0; i< data.length; i++) { %>
          <tr>
              <th scope="row"><%= (i+1) %></th>
              <td><%= data[i].name%></td>
              <td><%= data[i].user_name%></td>
              <td><%= data[i].phone%></td>
              <td><%= data[i].email%></td>
              <td><a href="/hospital/delete_hospital/<%=data[i].id%>" onclick="return alert('Are You sure?')"><i class="bi bi-trash"></i></a></td>
          </tr>
      <% } %>

    </tbody>
  </table>
</div>

<%- include('./layouts/footer.ejs') %>
